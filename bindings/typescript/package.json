{
  "name": "@umicp/core",
  "version": "1.0.0",
  "description": "UMICP TypeScript/JavaScript bindings for C++ core",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && node-gyp rebuild",
    "install": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist build node_modules *.node",
    "prepublishOnly": "npm run clean && npm install --production=false && npm run build && npm run test:all",
    "prepare": "npm run build",
    "lint": "tsc --noEmit",
    "lint:fix": "tsc --noEmit --fix",
    "dev": "npm run build && npm run test:watch",
    "build:debug": "tsc && node-gyp rebuild --debug",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security && npm run test:regression",
    "test:unit": "jest test/envelope.test.ts test/matrix.test.ts",
    "test:integration": "jest test/integration.test.ts test/e2e.test.ts",
    "test:s2s": "jest test/s2s.test.ts",
    "test:websocket": "jest test/websocket-transport.test.ts",
    "test:security": "jest test/security.test.ts",
    "test:regression": "jest test/regression.test.ts",
    "test:load": "jest test/load.test.ts",
    "test:performance": "jest --testNamePattern=\"Performance|Load\" --verbose",
    "test:ci": "npm run test:all && npm run test:load",
    "test:quick": "jest test/envelope.test.ts test/matrix.test.ts --verbose",
    "docs": "typedoc --out docs --name 'UMICP TypeScript Bindings' src/index.ts",
    "benchmark": "node examples/benchmark.js",
    "coverage:report": "npm run test:coverage && open coverage/lcov-report/index.html",
    "quality": "npm run lint && npm run test:all && npm run test:coverage"
  },
  "dependencies": {
    "node-addon-api": "^7.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/jest": "^29.5.8",
    "@types/ws": "^8.5.8",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "node-gyp": "^10.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cmmv-hive/umicp-core.git"
  },
  "bugs": {
    "url": "https://github.com/cmmv-hive/umicp-core/issues"
  },
  "homepage": "https://github.com/cmmv-hive/umicp-core#readme",
  "files": [
    "dist/",
    "build/Release/umicp_core.node",
    "src/",
    "examples/",
    "README.md",
    "package.json",
    "binding.gyp"
  ],
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "keywords": [
    "umicp",
    "ai",
    "communication",
    "protocol",
    "matrix",
    "embeddings",
    "federated-learning",
    "server-to-server",
    "typescript",
    "cpp",
    "bindings",
    "native",
    "performance",
    "simd"
  ],
  "author": "CMMV-Hive AI Collaborative Team",
  "license": "CC0-1.0",
  "publishConfig": {
    "access": "public"
  }
}
